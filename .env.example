# 데이터베이스 설정
DB_HOST=mysql
DB_PORT=3306
DB_NAME=money_management
DB_USER=root
DB_PASSWORD=your_mysql_password

# 개발환경에서 MySQL 컨테이너 사용 여부 (true/false)
USE_DOCKER_MYSQL=true

# 운영환경 외부 DB 설정 (USE_DOCKER_MYSQL=false일 때 사용)
PROD_DB_HOST=your_external_db_host
PROD_DB_PORT=3306
PROD_DB_USER=your_db_user
PROD_DB_PASSWORD=your_db_password

# 암호화 키 (AES-256-CBC 용 32바이트 hex 문자열)
ENCRYPTION_KEY=your_64_character_hex_string_here_32bytes_exactly

# 로그인 정보 (SHA-512 해시 또는 AES 암호화된 값)
LOGIN_USERNAME=admin
LOGIN_PASSWORD_HASH=your_hashed_password_here

# 텔레그램 알림 설정
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# 애플리케이션 설정
APP_ENV=development
APP_DEBUG=true
API_BASE_PATH=/api

# PHP 설정
PHP_TIMEZONE=Asia/Seoul